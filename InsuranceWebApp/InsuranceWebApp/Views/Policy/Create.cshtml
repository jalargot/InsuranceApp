@model InsuranceWebApp.Models.PolicyCreatePageModel
@{
    ViewData["Title"] = "Create Policy";
}

<br />
<h2 class="text-info">Create New Policy</h2>
@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}
<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.Description"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.Description" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.Coverage"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.Coverage" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.Coverage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.StartDate"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.StartDate" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.StartDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.Duration"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.Duration" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.Duration" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.RiskType"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.RiskType" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.RiskType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Policy.CustomerId"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Policy.CustomerId" class="form-control" />
                    </div>
                    <span asp-validation-for="Policy.CustomerId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-area="" asp-controller="Policy" asp-action="Back" class="btn btn-success form-control">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}