@model InsuranceWebApp.Models.CustomerViewPageModel
@{
    ViewData["Title"] = "Customers";
}

<br />

<div class="container row">
    <div class="col-6">
        <h2 class="text-info">Customers</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="/Create" class="btn btn-primary">Create New Customer</a>
    </div>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<form method="post">
    @if (Model.Customers.Count() > 0)
    {
        <br />
        <br />
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().DocNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers.FirstOrDefault().Address)
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var customer in Model.Customers)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(m => customer.DocNumber)
            </td>
            <td>
                @Html.DisplayFor(m => customer.FirstName)
            </td>
            <td>
                @Html.DisplayFor(m => customer.LastName)
            </td>
            <td>
                @Html.DisplayFor(m => customer.Email)
            </td>
            <td>
                @Html.DisplayFor(m => customer.Phone)
            </td>
            <td>
                @Html.DisplayFor(m => customer.Address)
            </td>
            <td>
                <a asp-route-id="@customer.CustomerId" asp-page="/Edit" class="btn btn-success btn-sm">Edit</a>
                <button asp-page-handler="Delete" asp-route-id="@customer.CustomerId" onclick="return confirm('Are you sure that you want to delete this customer?')" class="btn btn-danger btn-sm">Borrar</button>
            </td>
        </tr>
            }

        </table>
    }
    else
    {
        <br />
        <p>No Customers Available.</p>
    }
</form>